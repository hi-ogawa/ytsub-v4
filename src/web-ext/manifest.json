{
	"$schema": "https://json.schemastore.org/chrome-manifest",
	"manifest_version": 3,
	"name": "Youtube subtitle viewer V4",
	"version": "1.0.0.0",
	"homepage_url": "https://github.com/hi-ogawa/ytsub-v4",
	"icons": {
		"16": "assets/icon-16.png",
		"32": "assets/icon-32.png",
		"48": "assets/icon-48.png",
		"128": "assets/icon-128.png"
	},
	"action": {
		"default_popup": "popup/index.html?popup"
	},
	"options_page": "options/index.html",
	"background": {
		"type": "module",
		"service_worker": "background/index.js"
	},
	"content_scripts": [
		{
			"matches": ["https://www.youtube.com/*"],
			"js": ["content-scripts/index.js"],
			"run_at": "document_end",
			"world": "ISOLATED"
		}
	],
	"permissions": [],
	"host_permissions": ["http://localhost/*"],
	"content_security_policy": {
		"extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost:*; object-src 'self';"
	}
}
